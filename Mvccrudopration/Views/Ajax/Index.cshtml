<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" id="btn1">
   Add Emp 
</button>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>Delete</th>
        <th>Edit</th>
    </thead>
    
    <tbody id="tabledata">

    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="myform">
                    <div class="mb-3" id="idemp">
                        <label for="exampleInputEmail1" class="form-label">Id</label>
                        <input type="text" class="form-control" name="Id" id="EmpId" aria-describedby="emailHelp">

                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Name</label>
                        <input type="text" class="form-control" name="Name" id="Name" aria-describedby="emailHelp">
                       
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email" id="Email">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Salary</label>
                        <input type="text" class="form-control" name="Salary" id="Salary">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                
                <button type="button" class="btn btn-primary" id="savebtn">Save changes</button>
                <button type="button" class="btn btn-primary" id="updatebtn">Update changes</button>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
